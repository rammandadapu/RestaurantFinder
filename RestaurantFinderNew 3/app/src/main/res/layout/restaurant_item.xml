<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/business_image_list"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Name"
        android:textColor="#0b0a0a"
        android:id="@+id/name_list"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/business_image_list" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_list"
        android:layout_below="@+id/name_list"
        android:layout_toRightOf="@+id/business_image_list"
        android:minWidth="60dp"
        android:minHeight="11dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/address_list"
        android:textColor="#555252"
        android:layout_toRightOf="@+id/business_image_list"
        android:layout_toEndOf="@+id/business_image_list"
        android:layout_below="@+id/rating_list"
        android:layout_alignBottom="@+id/business_image_list" />

</RelativeLayout>